<div class="container" data-controller='movies-search'>
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div>
        <%= form_with url: movies_path, method: :get, html: { class: 'mb-4' }, data: { 'movies-search-target': :form } do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: 'Type a movie title',
                           value: params[:query],
                           data: {
                             action: 'keyup->movies-search#refresh',
                             'movies-search-target': :input,
                             'banana-search-target': :super_banana
                           }
                           %>
        <% end %>

        <%= render 'list', movies: @movies %>
      </div>
    </div>
  </div>
</div>
